{{#if projects.length}}
  <div class='row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3'>
    {{#each projects}}
    <div class='col'>
      <div class='card shadow-sm'>
        <div class='card-body'>
          <p class='card-text fw-bold'> {{title}} </p>
          <p class='card-text'> {{description}} </p>
          <div class='d-flex justify-content-between align-items-center'>
            <p class='p-0 m-0'> {{formatDate createdAt}} </p>
          </div>
        </div>
        <div class='card-footer'>
          <div class='btn-group btn-group-sm' role='group' aria-label='Basic example'>
            <a type='button' class='btn btn-outline-primary' href='/project/{{_id}}'>Detail</a>
            {{#if @root.token}}
              {{#ifequal user @root.userId}}
                <a type='button' class='btn btn-outline-secondary' href='/edit-project/{{_id}}'>Edit</a>
                <form action='/delete-project/{{_id}}' method='post' class='m-0 btn btn-outline-danger'>
                  <button type='submit' class='delete-btn'>Delete</button>
                </form>
              {{/ifequal}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
{{else}}
  <section class='page_404 w-75 mx-auto'>
		<div class='row'>
			<div class='col-sm-12'>
				<div class='col-sm-10 col-sm-offset-1 text-center'>
					<div class='four_zero_four_bg'>
						<h1 class='text-center'>404</h1>
					</div>
					<div class='contant_box_404'>
						<h3 class='h2'>Add new project</h3>
						<a href='/add' class='btn btn-primary btn-lg mb-5'>Add project</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{{/if}}
